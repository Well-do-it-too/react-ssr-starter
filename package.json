{
	"name": "react-ssr-starter",
	"private": true,
	"version": "1.1.2",
	"description": "Starter template for React projects with pre-configured development tools. Includes setup for comfortable development with optional SSR capabilities. An ideal foundation for quickly starting React application development.",
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"clean": "shx rm -rf node_modules pnpm-lock.yaml",
		"rmdist": "shx rm -rf dist",
		"dev": "vite",
		"build": "vite build",
		"serve": "vite preview",
		"certs:init": "shx mkdir -p .certs && cd .certs && mkcert create-ca && mkcert create-cert --domain react-ssr-starter.dev",
		"=== ssr": "=========== SSR =============================",
		"ssr:dev": "cross-env NODE_ENV=development VITE_SSR=true node server",
		"ssr:build:client": "cross-env VITE_SSR=true vite build --ssrManifest --outDir dist/client",
		"ssr:build:server": "cross-env VITE_SSR=true vite build --ssr src/entry-server.tsx --outDir dist/server",
		"ssr:build": "pnpm run ssr:build:client && pnpm run ssr:build:server",
		"ssr:serve": "cross-env NODE_ENV=production VITE_SSR=true node server",
		"======": "===========================================",
		"svg:optimize": "svgo -f src -f public --recursive",
		"img:optimize": "node image-optimizer.js",
		"img:optimize2": "node image-optimizer2.js",
		"img:opt1": "node image-opt1.js",
		"img:opt2": "node image-opt2.js",
		"img:opt3": "node image-opt3.js",
		"=== shared": "===========================================",
		"stylelint": "stylelint \"src/**/*.scss\"",
		"stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
		"lint": "eslint .",
		"format": "prettier --write .",
		"check": "npm run lint && prettier --check .",
		"pre-commit": "npm run format && npm run stylelint:fix && npm run check"
	},
	"keywords": [
		"typescript",
		"node",
		"starter",
		"boilerplate",
		"eslint",
		"prettier",
		"husky"
	],
	"engines": {
		"node": ">= 20 < 21"
	},
	"author": "Vitalii Rozhkov <t34.dev@gmail.com>",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/t34-dev/react-ssr-starter.git"
	},
	"bugs": {
		"url": "https://github.com/t34-dev/react-ssr-starter/issues"
	},
	"homepage": "https://github.com/t34-dev/react-ssr-starter#readme",
	"dependencies": {
		"@t34-dev/ts-ws-client": "^1.1.1",
		"@tanstack/react-query": "^5.59.15",
		"axios": "^1.6.8",
		"clsx": "^1.2.1",
		"express": "^4.19.2",
		"http-proxy-middleware": "^3.0.0",
		"i18next": "^23.11.3",
		"i18next-browser-languagedetector": "^7.2.1",
		"i18next-http-backend": "^2.5.1",
		"localforage": "^1.10.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.51.3",
		"react-i18next": "^14.1.1",
		"react-router-dom": "^6.23.0",
		"sort-by": "^1.2.0",
		"vite": "^5.2.10",
		"zustand": "^4.5.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.79",
		"@types/react-dom": "^18.2.25",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.0.11",
		"mkcert": "^3.2.0",
		"prettier": "^3.3.3",
		"sass": "^1.76.0",
		"serve": "^14.2.1",
		"shx": "^0.3.4",
		"sirv": "^2.0.4",
		"stylelint": "^16.8.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-prettier": "^5.0.2",
		"svgo": "^3.3.2",
		"typescript": "^5.4.5",
		"vite-plugin-imagemin": "^0.6.1",
		"vite-tsconfig-paths": "^4.3.2"
	}
}
